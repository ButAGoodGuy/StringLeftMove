/*
V1.0 新建
V1.1 增加输入左移位数输入
V1.2 输入数字7k+i,i=0~6等同输入7，也即取模； 
     修复了之前版本显示数据有误bug;
     
*/
#include <string.h>
#include <conio.h>
#include <stdio.h>
#define N 81
//#define leftMove 6
void leftMove(char*s,int leftMove)
{
	int i, j,temp, ModeLeftMove;
	ModeLeftMove = leftMove % 7;
	//len = strlen(s);
	//printf('%d',len);
	for (i=0;i<ModeLeftMove;i++)//左移ModeLeftMove位
	{
		//if (s[i + 1] != '\0')
		temp = s[0];
		for (j=0;j<ModeLeftMove;j++)
		{
			if(s[j+1]!='\0')
				s[j] = s[j + 1];
		}
		s[j] = temp;
	}
}

void main()
{
	 char a[N];
	 int M;
	 FILE *out;
	 printf("Enter a string:");
	 gets(a);

	 printf("LeftMove Number is:");
	 scanf("%d", &M);
	 
	 printf("The  original string is:");
	 puts(a);
	 //fun(a);
	 leftMove(a, M);
	 
	 printf("\n");
	 printf("The string after modified:");
	 puts(a);
	 //strcpy(a,"Hello World!");
	 //fun(a);
	 /******************************/
	 out=fopen("out.dat","w");
	 fprintf(out,"%s",a);
	 fclose(out);
	 /******************************/
}
